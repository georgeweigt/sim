; and (zp,x)

	lda	#mem
	sta	zp+1
	lda	#mem>>8
	sta	zp+2
	lda	#3
	sta	mem
	lda	#5
	ldx	#1
	and	(zp,x)
	cmp	#1
	beq	$+5
	jmp	fail

; and zp

	lda	#3
	sta	zp
	lda	#5
	and	zp
	cmp	#1
	beq	$+5
	jmp	fail

; and #imm

	lda	#3
	and	#5
	cmp	#1
	beq	$+5
	jmp	fail

; and abs

	lda	#3
	sta	mem
	lda	#5
	and	mem
	cmp	#1
	beq	$+5
	jmp	fail

; and (zp),y

	lda	#mem
	sta	zp
	lda	#mem>>8
	sta	zp+1
	lda	#3
	sta	mem+1
	ldy	#1
	lda	#5
	and	(zp),y
	cmp	#1
	beq	$+5
	jmp	fail

; and zp,x

	lda	#3
	sta	zp+2
	ldx	#2
	lda	#5
	and	zp,x
	cmp	#1
	beq	$+5
	jmp	fail

; and abs,y

	lda	#3
	sta	mem+4
	ldy	#4
	lda	#5
	and	mem,y
	cmp	#1
	beq	$+5
	jmp	fail

; and abs,x

	lda	#3
	sta	mem+5
	ldx	#5
	lda	#5
	and	mem,x
	cmp	#1
	beq	$+5
	jmp	fail
